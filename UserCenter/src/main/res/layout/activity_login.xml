<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_usercenter_username"
        android:hint="@string/usercenter_login_inputname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/et_usercenter_pwd"
        android:hint="@string/usercenter_login_inputpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <Button
        android:id="@+id/btn_usercenter_login"
        android:text="@string/usercenter_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
</LinearLayout>